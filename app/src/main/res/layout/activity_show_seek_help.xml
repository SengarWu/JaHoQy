<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.xpple.jahoqy.ui.activity.ShowSeekHelp">

    <include layout="@layout/include_action_bar"
        android:id="@+id/common_actionbar"/>
    <RelativeLayout
        android:background="@mipmap/bg_xxzy"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <com.xpple.jahoqy.view.RoundImageView
                    android:src="@mipmap/default_photo"
                    android:id="@+id/imageView"
                    imagecontrol:border_outside_color="#D78988"
                    imagecontrol:border_thickness="3dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:focusable="false" />
                <TextView
                    android:textSize="13sp"
                    android:id="@+id/username"
                    android:layout_gravity="center_horizontal"
                    android:text="XXXXX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标题："
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tt"
                        android:text=".........."
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/reputation"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:src="@mipmap/award"
                        android:layout_width="40dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/Award"
                        android:layout_marginTop="10dp"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:text="0">
                    </TextView>
                    <ImageView
                        android:src="@mipmap/givemon"
                        android:layout_marginLeft="20dp"
                        android:layout_width="40dp"
                        android:layout_height="match_parent" />
                    <TextView

                        android:text="0"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:id="@+id/mon"
                        android:layout_width="40dp"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/sex"
                        android:src="@mipmap/notknow"
                        android:layout_marginLeft="20dp"
                        android:layout_width="40dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:src="@mipmap/prople"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:id="@+id/peo"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:text="0/0"
                        android:layout_width="50dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/time"
                        android:textSize="15sp"
                        android:text="2015-9-15 19--27"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_mx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/ll1"
            android:textSize="13sp"
            android:text="描述信息："/>
        <TextView
            android:layout_below="@+id/tv_mx"
            android:paddingLeft="10dp"
            android:paddingRight="8dp"
            android:textSize="13dp"
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:text="..........."
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_below="@+id/details"
            android:id="@+id/t4"
            android:text="附图"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_below="@+id/t4"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:id="@+id/pic1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/pic_bg"/>
            <ImageView
                android:id="@+id/pic2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/pic_bg"/>
            <ImageView
                android:id="@+id/pic3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/pic_bg"/>
        </LinearLayout>
        <Button
            android:id="@+id/gh"
            android:text="我要帮忙"
            android:background="@mipmap/givehelp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="150dp"
            android:layout_height="60dp" />
    </RelativeLayout>

</LinearLayout>
