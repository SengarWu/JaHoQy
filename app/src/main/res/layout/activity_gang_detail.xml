<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_activity_bg"
    android:orientation="vertical">
    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />
   <LinearLayout
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center_vertical">
       <ImageView
           android:id="@+id/iv_gangs_header"
           android:scaleType="fitCenter"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:src="@mipmap/iv_gangs_picture"/>
       <LinearLayout
           android:layout_marginLeft="5dp"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:orientation="vertical">
           <LinearLayout
               android:layout_weight="1"
               android:layout_width="fill_parent"
               android:layout_height="-1dp"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="名称："
                   android:textSize="20sp"/>
               <TextView
                   android:id="@+id/tv_gangs_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="华信小苹果"
                   android:textSize="20sp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_weight="1"
               android:layout_width="fill_parent"
               android:layout_height="-1dp"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="等级："
                   android:textSize="20sp"/>
               <TextView
                   android:id="@+id/tv_gangs_grade"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="2"
                   android:textSize="20sp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_weight="1"
               android:layout_width="fill_parent"
               android:layout_height="-1dp"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="创始人："
                   android:textSize="20sp"/>
               <TextView
                   android:id="@+id/tv_gangs_founder"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="曹林"
                   android:textSize="20sp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_weight="1"
               android:layout_width="fill_parent"
               android:layout_height="-1dp"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="人数："
                   android:textSize="20sp"/>
               <TextView
                   android:id="@+id/tv_gangs_number"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="20"
                   android:textSize="20sp"/>
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="建帮宗旨:"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_gangs_purpose"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="为我电饭锅的典范过的电饭锅 地方东方故事电饭锅杜仲"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_select_type"
            android:background="#afffffff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableRight="@mipmap/back_right1"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请选择本帮派香主"
            android:textSize="20sp"/>
    </LinearLayout>
    <EditText
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:hint="申请入帮前，请填写您的申请理由"
        android:gravity="top"
        android:id="@+id/tv_gang_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#afffffff"
        android:textSize="20sp"
        android:maxLines="8"
        android:minLines="5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <TextView
            android:background="#8fffffff"
            android:layout_alignParentBottom="true"
            android:id="@+id/submit"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="申请加入"
            android:textSize="20sp"/>
    </RelativeLayout>
</LinearLayout>
