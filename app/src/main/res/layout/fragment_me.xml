<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.xpple.jahoqy.ui.mainFragment.MeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_layout_height"
        android:background="@mipmap/actionbar_me">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/title_me"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/bg_me">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <com.xpple.jahoqy.view.RoundImageView
                android:id="@+id/iv_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_photo"
                imagecontrol:border_inside_color="#fff7f2e9"
                imagecontrol:border_outside_color="#ffd5d1c8"
                imagecontrol:border_thickness="1dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_photo">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="用户名："/>
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="傻白甜"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/stv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别："
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="女"/>

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:text="天津"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/stv_user_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="积分："/>

                    <TextView
                        android:id="@+id/tv_user_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginLeft="5dp"
                        android:text="20"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/stv_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="声望："/>
                    <TextView
                        android:id="@+id/tv_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/stv_gangs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="所在帮派："/>

                    <TextView
                        android:id="@+id/tv_gangs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginLeft="5dp"
                        android:text="华信小苹果"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/stv_user_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="江湖称号："/>

                    <TextView
                        android:id="@+id/tv_user_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginLeft="5dp"
                        android:text="大侠"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/stv_user_jahoAnnounce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="江湖宣言："/>

                    <TextView
                        android:id="@+id/tv_user_jahoAnnounce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:maxLength="25"
                        android:textSize="20sp"
                        android:text="帮人就是帮己"
                        android:layout_marginLeft="5dp" />

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_edit_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="编辑资料"
                android:textColor="#6c6c6c" />
        </RelativeLayout>

        <View
            android:id="@+id/cv_info_0"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_height="5dp"
            android:background="@color/base_color_bg_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@null"
                android:text="每日签到(送2积分)"/>

            <Button
                android:id="@+id/btn_sign"
                android:background="@null"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到"/>

        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="@color/base_color_bg_gray"/>

        <Button
            android:id="@+id/btn_my_publish"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textSize="20sp"
            android:text="我的发布"
            android:gravity="center_vertical"
            android:background="@drawable/selector_fragment_me"
            android:drawableRight="@mipmap/back_right1"/>

        <View
            android:id="@+id/cv_info_1"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="@color/base_color_bg_gray"/>

        <Button
            android:id="@+id/btn_my_help"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textSize="20sp"
            android:text="我的帮忙"
            android:gravity="center_vertical"
            android:background="@drawable/selector_fragment_me"
            android:drawableRight="@mipmap/back_right1"/>

        <View
            android:id="@+id/cv_info_2"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="@color/base_color_bg_gray"/>

        <Button
            android:id="@+id/btn_store"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textSize="20sp"
            android:text="积分商店"
            android:gravity="center_vertical"
            android:background="@drawable/selector_fragment_me"
            android:drawableRight="@mipmap/back_right1"/>

        <View
            android:id="@+id/cv_info_3"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="@color/base_color_bg_gray"/>

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textSize="20sp"
            android:text="设置"
            android:gravity="center_vertical"
            android:background="@drawable/selector_fragment_me"
            android:drawableRight="@mipmap/back_right1"/>
    </LinearLayout>
</LinearLayout>