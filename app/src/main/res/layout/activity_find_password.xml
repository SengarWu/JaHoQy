<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    tools:context="com.xpple.jahoqy.ui.activity.FindPasswordActivity">

    <com.xpple.jahoqy.view.DeletableEditText
        android:id="@+id/et_phone"
        android:maxLength="11"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:paddingRight="4dp"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:hint="输入手机号"
        android:textSize="20sp"
        android:textColor="@color/base_color_text_white"
        android:inputType="phone"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/user_delete"
        android:drawableLeft="@mipmap/ic_phone"
        android:background="@mipmap/bg_phone"
        android:layout_centerInParent="true"/>
    <com.xpple.jahoqy.view.DeletableEditText
        android:id="@+id/et_new_password"
        android:password="true"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="4dp"
        android:maxLength="14"
        android:hint="输入新密码"
        android:textSize="20sp"
        android:textColor="@color/base_color_text_white"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/user_delete"
        android:drawableLeft="@mipmap/ic_lock"
        android:background="@mipmap/bg_phone"
        android:layout_below="@+id/et_phone"
        android:layout_alignLeft="@+id/et_phone"
        android:layout_marginTop="20dp"/>
    <com.xpple.jahoqy.view.DeletableEditText
        android:id="@+id/et_code"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:paddingRight="4dp"
        android:maxLength="6"
        android:drawableRight="@mipmap/user_delete"
        android:background="@mipmap/bg_phone"
        android:textSize="20sp"
        android:textColor="@color/base_color_text_white"
        android:singleLine="true"
        android:hint="输入验证码"
        android:layout_below="@+id/et_new_password"
        android:layout_alignLeft="@+id/et_new_password"
        android:layout_marginTop="20dp" />
    <Button
        android:id="@+id/btn_get_code"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="获取验证码"
        android:textSize="20sp"
        android:textColor="@color/base_color_text_white"
        android:background="@mipmap/ic_login"
        android:layout_alignTop="@+id/et_code"
        android:layout_alignRight="@+id/et_phone"
        android:layout_alignEnd="@+id/et_phone" />

    <ImageView
        android:id="@+id/iv_find_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_find_password"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/et_new_password"
        android:layout_alignEnd="@+id/et_new_password" />
</RelativeLayout>
