<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    tools:context="com.xpple.jahoqy.ui.activity.LoginActivity">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <com.xpple.jahoqy.view.DeletableEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@mipmap/bg_phone"
            android:singleLine="true"
            android:maxLength="11"
            android:drawableRight="@mipmap/user_delete"
            android:drawableLeft="@mipmap/ic_phone"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="20sp"
            android:inputType="phone"
            android:hint="手机号"
            android:textColor="@color/base_color_text_white"/>
        <com.xpple.jahoqy.view.DeletableEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/bg_phone"
            android:singleLine="true"
            android:maxLength="14"
            android:password="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/user_delete"
            android:drawableLeft="@mipmap/ic_lock"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:hint="密码"
            android:textSize="20sp"
            android:textColor="@color/base_color_text_white"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="登  录"
            android:textColor="@color/base_color_text_white"
            android:background="@mipmap/ic_login"
            android:layout_marginTop="15dp"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp">

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</RelativeLayout>
