<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xpple.jahoqy.ui.activity.GangsTaskActivity">

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_gangs_task"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="每日一帮"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/btn_task1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="领取任务"
                android:layout_centerVertical="true" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/base_color_text_white"
            android:layout_height="2dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/selector_fragment_me">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="招贤纳士"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/btn_task2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="领取任务"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/base_color_text_white"
            android:layout_height="2dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/selector_fragment_me">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="行侠仗义"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/btn_task3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="领取任务" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/base_color_text_white"
            android:layout_height="2dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/selector_fragment_me">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="帮派宣传"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/btn_task4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="领取任务" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/base_color_text_white"
            android:layout_height="2dp"/>

    </LinearLayout>

</LinearLayout>
