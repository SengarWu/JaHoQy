<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:visibility="gone"
        android:paddingBottom="2dp"
        android:background="#4dffffff">
        <ImageView
            android:id="@+id/title_photo"
            android:scaleType="fitCenter"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/gangs_0"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="成员名称"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/title_photo"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/gangs"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#8fffffff">
        <ImageView
            android:id="@+id/gangs_photo"
            android:scaleType="fitCenter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/gangs_0"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/gangs_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="成员名称"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/gangs_photo"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/gangs_position"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="青木堂堂主"
                android:textSize="16dp"
                android:paddingRight="20dp"
                android:drawableRight="@mipmap/back_right1"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
